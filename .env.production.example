# Bosnia Movie Rankings - Production Environment Variables
# Copy this file to .env.production and fill in the values
 
# Database
POSTGRES_PASSWORD=your_secure_password_here

# Backend
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# Frontend (build-time variables)
VITE_OMDB_API_KEY=your_omdb_api_key_here  # Optional: For movie details from OMDB
VITE_APP_NAME="Bosnia Movie Rankings"
VITE_ENABLE_DARK_MODE=true

# Optional: Rate limiting (adjust based on your needs)
RATE_LIMIT_WINDOW_MS=900000      # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100      # Requests per window per IP

# Optional: Database connection pool settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Optional: Logging level
LOG_LEVEL=info  # debug, info, warn, error