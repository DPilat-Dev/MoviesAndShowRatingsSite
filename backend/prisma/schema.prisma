generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  displayName  String   @map("display_name")
  avatarUrl    String?  @map("avatar_url") @db.Text
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")
  
  rankings Ranking[]
  
  @@map("users")
  @@index([createdAt])
  @@index([isActive])
}

model Movie {
  id          String   @id @default(cuid())
  title       String
  year        Int
  description String?
  posterUrl   String?  @map("poster_url")
  watchedYear Int      @map("watched_year") // Year the group watched this movie
  addedBy     String   @map("added_by")
  createdAt   DateTime @default(now()) @map("created_at")
  
  rankings Ranking[]
  
  @@map("movies")
  @@index([watchedYear])
  @@index([year])
  @@index([title])
  @@index([createdAt])
  @@index([addedBy])
  @@index([watchedYear, year])
}

model Ranking {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  movieId     String   @map("movie_id")
  rating      Int      // 1-10 scale
  rankingYear Int      @map("ranking_year") // Year this ranking belongs to
  description String?   @db.Text             // Optional user comment about the rating
  rankedAt    DateTime @default(now()) @map("ranked_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")
  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)
  
  @@map("rankings")
  @@unique([userId, movieId, rankingYear])
  @@index([rankingYear])
  @@index([userId, rankingYear])
  @@index([movieId, rankingYear])
  @@index([userId])
  @@index([movieId])
  @@index([rating])
  @@index([rankedAt])
  @@index([updatedAt])
  @@index([userId, movieId])
}